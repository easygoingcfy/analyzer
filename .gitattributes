# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf

# Batch files should use CRLF on Windows
*.bat text eol=crlf

# Markdown files
*.md text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# Documentation
*.txt text eol=lf

# Ensure that these file types are not treated as text
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
